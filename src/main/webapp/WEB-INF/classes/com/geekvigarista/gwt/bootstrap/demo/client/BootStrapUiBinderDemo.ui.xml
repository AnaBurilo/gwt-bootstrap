<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.geekvigarista.gwt.bootstrap.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		
		<b:Heading size="2">UiBinder Examples</b:Heading>

		<b:Navbar fixed="top">
			<b:Brand>Bootstrap</b:Brand>
			<b:Nav>
				<b:NavLink>Test</b:NavLink>
				<b:DividerVertical />
				<b:NavLink href="http://www.google.com">Another Test</b:NavLink>
			</b:Nav>
			<b:NavForm size="1"/>
			<b:Nav alignment="right">
				<b:NavLink>Test</b:NavLink>
			</b:Nav>
			<b:NavText alignment="right">Right</b:NavText>
			<b:NavSearch size="2" placeholder="Search" alignment="right"/>
		</b:Navbar>
	
		Hello <b:Abbreviation title="You">u</b:Abbreviation>, that's <b:Emphasis>me!</b:Emphasis>
		<b:Button ui:field="button" icon="heart" options="info mini">Testbutton</b:Button>
		<b:BlockQuote cite="Me" pullright="true">This is a blockquote.</b:BlockQuote>
		
		<b:ButtonToolbar>
			<b:ButtonGroup>
				<b:Button>1</b:Button>
				<b:Button>2</b:Button>
				<b:Button>3</b:Button>
			</b:ButtonGroup>
			<b:ButtonGroup>
				<b:Button>4</b:Button>
			</b:ButtonGroup>
		</b:ButtonToolbar>
		
		Icon: <b:Icon type="star"/> :-). Invisible: <b:Icon type="heart" color="white"/> ;-).
		Strong: <b:Strong>Hey!</b:Strong>
		
		<b:Container>
			<b:UnorderedList>
				<b:ListItem><g:Anchor>Test</g:Anchor></b:ListItem>
				<b:ListItem><g:Label>Another Test</g:Label></b:ListItem>
			</b:UnorderedList>
		</b:Container>
		
		<b:FluidContainer>
			<b:Row>
				<b:RowItem size="2"><g:Label>I'm a Label inside a fluid container...</g:Label></b:RowItem>
				<b:RowItem size="2" offset="2"><g:Label>Me too!</g:Label></b:RowItem>
			</b:Row>
			<b:Row fluid="true">
				<b:RowItem size="2"><g:Label>I'm in a Fluid row...</g:Label></b:RowItem>
				<b:RowItem size="2" offset="2"><g:Label>Me too!</g:Label></b:RowItem>
			</b:Row>
		</b:FluidContainer>
		<b:Container>
			<b:Dropdown>
<!-- 				<b:ListItem><g:Anchor>Test</g:Anchor></b:ListItem> -->
			</b:Dropdown>
		</b:Container>
	</g:HTMLPanel>
</ui:UiBinder> 